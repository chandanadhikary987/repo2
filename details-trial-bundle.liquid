        <li><img src="{{ section.settings.details-img6 | img_url: "720x" }}">{{ section.settings.details-text6 }}</li>
            </ul>
        </div>
    </div>
	</section>

		<section id="tab-2" class="light-blue-tab cmn-tab">
      <div class="trial_in">
        <div class="detail--info">
            <img src="{{ section.settings.ingredients-img1 | img_url: "720x" }}">
            <div class="types">
              <h2>{{ section.settings.ingredients-head-text1 }}</span></h2>
              <p>{{ section.settings.ingredients-content1 }}</p>
            </div>
            <div class="full_ingred">
              <a href="#" class="show_hide" data-content="toggle-text">{{ section.settings.ingredients-accordion-text1 }} <i class="fas fa-plus"></i></a>
              <div class="content">{{ section.settings.ingredients-accordion-content1 }}</div>
           </div> 
        </div>
      </div>
      <div class="trial_in">
        <div class="detail--info">
            <img src="{{ section.settings.ingredients-img2 | img_url: "720x" }}">
            <div class="types">
              <h2>{{ section.settings.ingredients-head-text2 }}</span></h2>
              <p>{{ section.settings.ingredients-content2 }}</p>
            </div>
            <div class="full_ingred">
              <a href="#" class="show_hide" data-content="toggle-text">{{ section.settings.ingredients-accordion-text2 }} <i class="fas fa-plus"></i></a>
              <div class="content"> {{ section.settings.ingredients-accordion-content2 }}</div>
           </div> 
        </div>
      </div>
      <div class="trial_in">
        <div class="detail--info">
            <img src="{{ section.settings.ingredients-img3 | img_url: "720x" }}">
            <div class="types">
              <h2>{{ section.settings.ingredients-head-text3 }}</span></h2>
              <p>{{ section.settings.ingredients-content3 }}</p>
            </div>
            <div class="full_ingred">
              <a href="#" class="show_hide" data-content="toggle-text">{{ section.settings.ingredients-accordion-text3 }} <i class="fas fa-plus"></i></a>
              <div class="content">  {{ section.settings.ingredients-accordion-content3 }}</div>
           </div> 
        </div>
      </div> 

    </section>
    <section id="tab-3" class="yellow-tab cmn-tab">
      		 <ul>
              <li><img src="{{ section.settings.directions-img1 | img_url: "720x" }}">{{ section.settings.directions-ing1 }}</li>
