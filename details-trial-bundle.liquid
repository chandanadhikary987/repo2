details-trial-bundle.liquid

<div class="ingred_tab">
    <div class="product_feature_inner">
    
      	<div class="tabs">
        <ul id="tab-links">
            <li><a href="#tab-1" class="active blue-tab" title="Details">{{ section.settings.details }}</a></li>
          <li><a href="#tab-2" title="Ingredients" class="light-blue-tab">{{ section.settings.ingredients }}</a></li>
            <li><a href="#tab-3" title="Directions" class="yellow-tab">{{ section.settings.directions }}</a></li> 

        </ul>
	
	<section id="tab-1" class="active blue-tab cmn-tab">
      <div class="detail--info">
        <h2><span>{{ section.settings.details-heading }}</span></h2>
        <div class="types">
            <ul>
              
        <li><img src="{{ section.settings.details-img1 | img_url: "720x" }}">{{ section.settings.details-text1 }}</li>
        <li><img src="{{ section.settings.details-img2 | img_url: "720x" }}">{{ section.settings.details-text2 }}</li>
        <li><img src="{{ section.settings.details-img3 | img_url: "720x" }}">{{ section.settings.details-text3 }}</li>
